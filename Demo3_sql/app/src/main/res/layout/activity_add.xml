<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddActivity">

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_x="244dp"
        android:layout_y="440dp"
        android:text="Add" />

    <Button
        android:id="@+id/buttonChoseCategory"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_x="218dp"
        android:layout_y="328dp"
        android:text="Chose" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_x="79dp"
        android:layout_y="67dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:text="" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_x="79dp"
        android:layout_y="149dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:paddingLeft="5dp"
        android:text="" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_x="79dp"
        android:layout_y="241dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:text="" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_x="58dp"
        android:layout_y="444dp"
        android:text="Cancel" />

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="121dp"
        android:layout_height="45dp"
        android:layout_x="82dp"
        android:layout_y="331dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Category"
        android:paddingLeft="5dp"
        android:text="Category" />

</AbsoluteLayout>