<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditBookActivity">


    <EditText
        android:id="@+id/editTextBookName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_x="45dp"
        android:layout_y="67dp"
        android:ems="10"
        android:hint="Book Name"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/editTextAuthor"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_x="45dp"
        android:layout_y="147dp"
        android:ems="10"
        android:hint="Author"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/editTextPublishYear"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_x="45dp"
        android:layout_y="227dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="number"
        android:text="" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_x="62dp"
        android:layout_y="340dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_x="248dp"
        android:layout_y="340dp"
        android:text="Save" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="261dp"
        android:layout_height="43dp"
        android:layout_x="67dp"
        android:layout_y="17dp"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/holo_red_light" />
</AbsoluteLayout>